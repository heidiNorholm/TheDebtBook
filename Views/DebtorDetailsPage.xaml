<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheDebtBook.View.DebtorDetailsPage">
    <ContentPage.Content>
        <Grid
            RowDefinitions="*,4*,*"
            ColumnDefinitions="2*,*">
            <!--Ændre dette så det binder til navn-->
            <Label 
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Text="{Binding Name}"
                HorizontalTextAlignment="Center"
                FontSize="Title" 
                HorizontalOptions="Center" 
                Margin="0,20,0,10" />
            <ListView 
                Grid.Row="1"
                Grid.Column="0"
                ItemsSource="{Binding Debtors}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding NewValue, StringFormat='Transaction amount: {0:C}'}" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button
                Grid.Row="2"
                Grid.Column="0"
                Text="Close"
                Clicked="OnCloseButton_Clicked">
            </Button>

            <StackLayout
                Grid.Row="1"
                Grid.Column="1">
                <Entry
                    Placeholder="Enter value"
                    Text="{Binding NewValue}">
                </Entry>
                <Button
                    Text="Add Value"
                    x:Name="AddValueButton"
                    Command="{Binding AddValueCommand}"
                    Clicked="OnAddValueButton_Clicked">
                </Button>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>